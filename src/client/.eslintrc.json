{
	"env": {
		"browser": true,
		"commonjs": true,
		"es6": true,
		"mocha": true
	},
	
	"extends": "eslint:recommended",
	"rules": {
		"indent": [
			"error",
			"tab"
		],
		"linebreak-style": [
			"error",
			"unix"
		],
		"quotes": [
			"error",
			"single",
			{"allowTemplateLiterals": true}
		],
		"semi": [
			"error",
			"never"
		],
		"comma-spacing": 2,
		"space-before-blocks": "error",
		"arrow-spacing": "error",
		"no-only-tests/no-only-tests": 2,
		"no-multiple-empty-lines": ["error", { "max": 2}]
	},
	"plugins": [
		"no-only-tests"
	],
	"parserOptions": {
		"sourceType": "module",
		"ecmaFeatures": {
			"jsx": true
        }
	}
}