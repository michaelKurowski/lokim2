{
	// Use IntelliSense to learn about possible Node.js debug attributes.
	// Hover to view descriptions of existing attributes.
	// For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
	"version": "0.2.0",
	"configurations": [
		{
			"type": "node",
			"request": "attach",
			"name": "Attach by Process ID",
			"processId": "${command:PickProcess}"
		},
		{
			"type": "node",
			"request": "launch",
			"name": "Mocha Tests (backend)",
			"program": "${workspaceRoot}/src/server/node_modules/mocha/bin/_mocha",
			"args": [
				"-u",
				"tdd",
				"--timeout",
				"999999",
				"--colors",
				"${workspaceRoot}/src/server/.tests/**/*.spec.js"
			],
			"internalConsoleOptions": "openOnSessionStart"
		},
		{
			"type": "node",
			"request": "launch",
			"name": "Jest Tests (frontend)",
			//"program": "${workspaceRoot}/src/client/node_modules/.bin/react-scripts",
			"runtimeVersion": "8.9.4",
			"runtimeExecutable": "npm",
			"runtimeArgs": [
				"run",
				"test-debug"
			],
			"protocol": "inspector",
			"port": 9229,
			"cwd": "${workspaceRoot}/src/client/",
			"console": "integratedTerminal",
			"restart": true,
			"internalConsoleOptions": "neverOpen"
		}
	]
}