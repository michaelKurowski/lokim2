{
	// Use IntelliSense to learn about possible Node.js debug attributes.
	// Hover to view descriptions of existing attributes.
	// For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
	"version": "0.2.0",
	"configurations": [
		{
			"type": "node",
			"request": "attach",
			"name": "Attach by Process ID",
			"processId": "${command:PickProcess}"
		},
		{
			"type": "node",
			"request": "launch",
			"name": "Mocha Tests",
			"program": "${workspaceRoot}/src/server/node_modules/mocha/bin/_mocha",
			"args": [
				"-u",
				"tdd",
				"--timeout",
				"999999",
				"--colors",
				"${workspaceRoot}/src/server/.tests/**/*.spec.js"
			],
			"internalConsoleOptions": "openOnSessionStart"
		},
		{
            "name": "Debug Jest",
            "type": "node",
            "request": "launch",
			"runtimeVersion": "8.9.4",
            "runtimeArgs": [
                "${workspaceRoot}/src/client/node_modules/react-scripts/scripts/test.js",
                "--runInBand",
				"--env=jsdom",
				"--inspect"
            ],
            "cwd": "${workspaceRoot}/src/client"
		}
	]
}